{
  "root": true,
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["public/**/*.js"],
      "env": {
        "browser": true,
        "es6": true
      }
    },
    {
      "files": ["__tests__/**", "**/*.test.js"],
      "env": {
        "jest": true,
        "node": true
      }
    }
  ]
}

